<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="programming146.fernsteuerung.java.Gui">
    <BorderPane prefHeight="400.0" prefWidth="600.0">
        <top>
            <MenuBar BorderPane.alignment="CENTER">
                <Menu mnemonicParsing="false" text="Programm">
                    <MenuItem mnemonicParsing="false" text="Unspecified Action" />
                    <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#pressClose" text="Close" />
                </Menu>
                <Menu mnemonicParsing="false" text="Einstellungen">
                    <MenuItem fx:id="connectionButton" mnemonicParsing="false" onAction="#pressServerConnection" text="Serververbindung" />
                    <MenuItem fx:id="showSettingsButton" mnemonicParsing="false" onAction="#pressShowSettings" text="Einstellungen anzeigen" />
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <MenuItem mnemonicParsing="false" text="About" />
                </Menu>
            </MenuBar>
        </top>
    </BorderPane>
</AnchorPane>
